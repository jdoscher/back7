    <article id="article-5e31127c9258077073262197" class="entry--item h-entry clearfix hentry author-jay-doscher post-type-text">
      
      <div class="blog-item-title">
        <time class="dt-published date-callout" datetime="2020-02-08" pubdate>
          <div class="date-wrapper">
            <span class="month">Feb </span><span class="day"> 8</span>
